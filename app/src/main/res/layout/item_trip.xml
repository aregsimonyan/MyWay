<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:backgroundTint="@color/colorCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvRoute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Yerevan -> Masis"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryText"/>

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500 AMD"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorPriceText"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date &amp; Time"
            android:textColor="@color/colorSecondaryText"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvDriverInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driver Name â€¢ Car Model"
            android:textStyle="italic"
            android:textColor="@color/colorSecondaryText"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvSeats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3 seats left"
                android:textColor="@color/colorSeatsText"/>

            <Button
                android:id="@+id/btnBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BOOK"
                android:backgroundTint="@color/colorButton"
                android:textColor="@color/colorButtonText"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>