<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPageBackground">

    <!-- Sticky top app bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTopBar"
        android:elevation="0dp"
        app:elevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:paddingHorizontal="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post a Ride"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryText"
                android:fontFamily="sans-serif-medium"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorTopBarDivider"/>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable body -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="24dp"
            android:paddingBottom="40dp">

            <!-- ROUTE label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:letterSpacing="0.12"
                android:text="ROUTE"
                android:textColor="@color/colorSectionLabel"
                android:textSize="11sp"
                android:textStyle="bold" />

            <!-- Route card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                app:cardBackgroundColor="@color/colorCard"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- From row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/circle_green" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:letterSpacing="0.1"
                                android:text="FROM"
                                android:textColor="@color/colorHintText"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                            <Spinner
                                android:id="@+id/spinnerFrom"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="16dp"
                        android:background="@color/colorRowDivider" />

                    <!-- To row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/circle_red" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:letterSpacing="0.1"
                                android:text="TO"
                                android:textColor="@color/colorHintText"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                            <Spinner
                                android:id="@+id/spinnerTo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SCHEDULE label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:letterSpacing="0.12"
                android:text="SCHEDULE"
                android:textColor="@color/colorSectionLabel"
                android:textSize="11sp"
                android:textStyle="bold" />

            <!-- Schedule card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                app:cardBackgroundColor="@color/colorCard"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Date row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginEnd="16dp"
                            android:src="@android:drawable/ic_menu_today" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:letterSpacing="0.1"
                                android:text="DATE"
                                android:textColor="@color/colorHintText"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/etDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:focusable="false"
                                android:hint="Tap to pick a date"
                                android:inputType="none"
                                android:maxLines="1"
                                android:textColor="@color/colorPrimaryText"
                                android:textColorHint="@color/colorHintStrong"
                                android:textSize="15sp" />

                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="16dp"
                        android:background="@color/colorRowDivider" />

                    <!-- Time row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginEnd="16dp"
                            android:src="@android:drawable/ic_menu_recent_history" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:letterSpacing="0.1"
                                android:text="TIME"
                                android:textColor="@color/colorHintText"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/etTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:focusable="false"
                                android:hint="Tap to pick a time"
                                android:inputType="none"
                                android:maxLines="1"
                                android:textColor="@color/colorPrimaryText"
                                android:textColorHint="@color/colorHintStrong"
                                android:textSize="15sp" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- DETAILS label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:letterSpacing="0.12"
                android:text="DETAILS"
                android:textColor="@color/colorSectionLabel"
                android:textSize="11sp"
                android:textStyle="bold" />

            <!-- Details card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="36dp"
                app:cardBackgroundColor="@color/colorCard"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Price row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp">

                        <TextView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginEnd="16dp"
                            android:gravity="center"
                            android:text="֏"
                            android:textColor="@color/colorIcon"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:letterSpacing="0.1"
                                android:text="PRICE PER SEAT (AMD)"
                                android:textColor="@color/colorHintText"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/etPrice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:hint="e.g. 500"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:textColor="@color/colorPrimaryText"
                                android:textColorHint="@color/colorHintStrong"
                                android:textSize="15sp" />

                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="16dp"
                        android:background="@color/colorRowDivider" />

                    <!-- Seats row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginEnd="16dp"
                            android:src="@android:drawable/ic_menu_my_calendar" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:letterSpacing="0.1"
                                android:text="AVAILABLE SEATS (1–4)"
                                android:textColor="@color/colorHintText"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/etSeats"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:hint="e.g. 3"
                                android:inputType="number"
                                android:maxLines="1"
                                android:textColor="@color/colorPrimaryText"
                                android:textColorHint="@color/colorHintStrong"
                                android:textSize="15sp" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Publish button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPublish"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/colorButton"
                android:text="Publish Ride"
                android:textAllCaps="false"
                android:textColor="@color/colorButtonText"
                android:textSize="17sp"
                android:textStyle="bold"
                app:cornerRadius="14dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ImageButton
        android:id="@+id/btnMore"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="9dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="More options"
        android:padding="16dp"
        android:src="@drawable/ic_more_vert"
        app:layout_anchor="@+id/appBarLayout"
        app:layout_anchorGravity="end|center" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>